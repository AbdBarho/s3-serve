{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./build",
    "declaration": true,
    "declarationMap": true,
    "preserveWatchOutput": true
  },
  "buildOptions": {
    "force": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "build/**/*"]
}
